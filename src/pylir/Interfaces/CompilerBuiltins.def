#ifndef COMPILER_BUILTIN
#define COMPILER_BUILTIN(...)
#endif

#define COMPILER_BUILTIN_SLOT_TO_API_NAME(slotName) "pylir" #slotName

#ifndef COMPILER_BUILTIN_UNARY_OP
#define COMPILER_BUILTIN_UNARY_OP(name, slotName) \
  COMPILER_BUILTIN(name, pylir##slotName)
#endif

#ifndef COMPILER_BUILTIN_BIN_OP
#define COMPILER_BUILTIN_BIN_OP(name, slotName) \
  COMPILER_BUILTIN(name, pylir##slotName)
#endif

#ifndef COMPILER_BUILTIN_REV_BIN_OP
#define COMPILER_BUILTIN_REV_BIN_OP(name, slotName, revSlotName) \
  COMPILER_BUILTIN_BIN_OP(name, slotName)
#endif

#ifndef COMPILER_BUILTIN_TERNARY_OP
#define COMPILER_BUILTIN_TERNARY_OP(name, slotName) \
  COMPILER_BUILTIN(name, pylir##slotName)
#endif

#ifndef COMPILER_BUILTIN_IOP
#define COMPILER_BUILTIN_IOP(name, slotName, ...) \
  COMPILER_BUILTIN_BIN_OP(name, slotName)
#endif

#define TYPE_SLOT_IOP(slotName, cppName, normalCppName) \
  COMPILER_BUILTIN_IOP(cppName, slotName, normalCppName)
#define TYPE_SLOT_TERNARY_OP(slotName, cppName) \
  COMPILER_BUILTIN_TERNARY_OP(cppName, slotName)
#define TYPE_SLOT_REV_BIN_OP(slotName, revSlotName, cppName) \
  COMPILER_BUILTIN_REV_BIN_OP(cppName, slotName, revSlotName)
#define TYPE_SLOT_BIN_OP(slotName, cppName) \
  COMPILER_BUILTIN_BIN_OP(cppName, slotName)
#define TYPE_SLOT_UNARY_OP(slotName, cppName) \
  COMPILER_BUILTIN_UNARY_OP(cppName, slotName)
#define TYPE_SLOT_OP(slotName, cppName) \
  COMPILER_BUILTIN(cppName, pylir##slotName)
#include "Slots.def"

#undef COMPILER_BUILTIN_IOP
#undef COMPILER_BUILTIN_SLOT_TO_API_NAME
#undef COMPILER_BUILTIN_TERNARY_OP
#undef COMPILER_BUILTIN_REV_BIN_OP
#undef COMPILER_BUILTIN_BIN_OP
#undef COMPILER_BUILTIN_UNARY_OP
#undef COMPILER_BUILTIN
